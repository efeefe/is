{% extends 'partials/base.html.twig' %}

{% set blog = page.find(header_var('blog_url')|defined(theme_var('blog-page'))) %}
{% set new_base_url = blog.url == '/' ? '' : blog.url %}
{% set show_pagination = header_var('content.pagination')|defined(true) %}
{% set show_breadcrumbs = header_var('content.breadcrumbs')|defined(false) %}
{% set datestamp = include('partials/page-bits/date.html.twig') %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 2em;
            padding: 1.5em;
        }
        
        .gallery-item {
            position: relative;
            cursor: pointer;
            transition: opacity 0.3s ease;
        }
        
        .gallery-item:hover {
            opacity: 0.9;
        }
        
        .description {
            padding: 0.8em;
            background: rgba(0, 0, 0, 0.7);
            color: white;
            z-index: 1;
        }
        
        .description.bottom {
            position: absolute;
            bottom: 0;
            left: 0;
            right: 0;
        }
        
        .description.top {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
        }
        
        .image.fit {
            display: block;
            width: 100%;
            aspect-ratio: 4/3;
            overflow: hidden;
        }
        
        .image.fit img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        @media screen and (max-width: 980px) {
            .grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }
        @media screen and (max-width: 736px) {
            .grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
{% endblock %}

{% block content %}

<article itemscope itemtype="http://schema.org/Article">
    <header>
        {% if show_title %}<h1 itemprop="name headline">{{ title }}</h1>{% endif %}
        {% if page.header.subtitle %}<p>{{ page.header.subtitle|raw }}</p>{% endif %}
        <p class="data-post">
        {% if config.plugins.readingtime.enabled %}<small><i class="fas fa-book-reader"></i> {{ page.content|readingtime}}</small>{% endif %}
        <br><time itemprop="datePublished"><i class="far fa-clock"></i> {{ 'EDITORIAL.ITEM.POSTED_ON'|t }} {{ datestamp }}</time>
        {% if page.taxonomy.author %}<br><small itemprop="author" itemscope itemtype="https://schema.org/Person"><i class="fas fa-user"></i>
        {% for author in page.taxonomy.author %}
        <a class="authors" title="{{ 'EDITORIAL.ITEM.SEE_OTHER_POSTS_OF'|t }} {{ (author|capitalize) }}"
        href="{{ new_base_url }}/author{{ config.system.param_sep }}{{ author }}"><span class="name" itemprop="name" rel="author">{{ author|capitalize }}</span>
        </a>
        {% if not loop.last %}, {% endif %}
        {% endfor %}
        </small>{% endif %}
        <small itemprop="author" itemscope itemtype="https://schema.org/Person">by <i class="fas fa-user"></i>
        <a class="authors" title="author"
        href="/#about"><span class="name" itemprop="name" rel="author">Felipe Schmidt Fonseca</span>
        </a>
        </small>
        </p>
        
    </header>

    
    <section>
        <h1>{{ page.title }}</h1>
        
        {# Render the main content first #}
        {{ page.content|raw }}

        <div class="pswp-gallery pswp-gallery--single-column" id="gallery--simple">
            {% if page.header.content.items %}
                <div class="box alt">
                    <div class="grid">
                        {% for item in page.header.content.items %}
                            {% set image = page.media[item.image] %}
                            {% if image %}
                                {% set thumb = image.cropZoom(800,600) %}
                                <div class="gallery-item">
                                    <a href="{{ image.url }}"
                                       data-pswp-width="{{ image.width }}"
                                       data-pswp-height="{{ image.height }}"
                                       {% if item.description %}data-pswp-caption="{{ item.description }}"{% endif %}>
                                        <span class="image fit">
                                            <img src="{{ thumb.url }}" alt="{{ item.description|default('') }}" />
                                        </span>
                                        {% if item.description %}
                                            <div class="description {{ item.position|default('bottom') }}">
                                                {{ item.description }}
                                            </div>
                                        {% endif %}
                                    </a>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            {% else %}
                {% set images = page.media.images %}
                {% if images|length > 0 %}
                    <div class="box alt">
                        <div class="grid">
                            {% for image in images %}
                                {% set thumb = image.cropZoom(800,600) %}
                                <div class="gallery-item">
                                    <a href="{{ image.url }}"
                                       data-pswp-width="{{ image.width }}"
                                       data-pswp-height="{{ image.height }}">
                                        <span class="image fit">
                                            <img src="{{ thumb.url }}" alt="{{ image.filename }}" />
                                        </span>
                                    </a>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% else %}
                    <p>No images found in this gallery.</p>
                {% endif %}
            {% endif %}
        </div>
    </section>
{% endblock %}

{% block bottom %}
    {{ parent() }}
    <script>
    document.addEventListener('DOMContentLoaded', () => {
        let lightbox = new PhotoSwipeLightbox({
            gallery: '#gallery--simple',
            children: 'a',
            pswpModule: PhotoSwipe,
            padding: { top: 20, bottom: 20, left: 20, right: 20 },
            showHideAnimationType: 'fade',
            
            // Add click handler for each gallery item
            clickToCloseNonZoomable: true,
            preload: [1,3],
            
            // UI customizations
            showAnimationDuration: 300,
            hideAnimationDuration: 300,
            bgOpacity: 0.9,
            
            // Optional features
            wheelToZoom: true,
            closeOnVerticalDrag: true,
        });
        lightbox.init();
    });
    </script>
{% endblock %}